<h1>工時明細</h1>
<%= paginate @students, theme: 'twitter-bootstrap-4' %>
<meta charset="UTF-8"> 
<%= wicked_pdf_stylesheet_link_tag "pdf" -%>
<%= wicked_pdf_javascript_include_tag "number_pages" %>
<table class="table table-hover table-sm">

  <thead>
    <tr>
      <th style="width: 200px;">編號</th>
      <th style="width: 200px;">姓名</th>
      <th style="width: 200px;">日期</th>
      <th style="width: 200px;">工時</th>
      <th style="width: 200px;">時薪</th>
      <th style="width: 200px;">合計</th>
    </tr>
  </thead>
  <tbody>
  <% @salary_all.each do |salary| %>
    <tr>
      <td><%= salary.date %></td>
      <td><%= salary.hr %></td>
      <td><%= salary.hourly_wage %></td>
      <td><%= salary.hr * salary.hourly_wage %></td>
    </tr>
  <% end %>
   
  </tbody>
</table>

<%= link_to "首頁", staff_root_path, class: 'btn btn-primary btn-xs' %>
