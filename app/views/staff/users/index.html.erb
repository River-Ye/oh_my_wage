<h2 class="verticalspace3">學生名單</h2>

<%= form_tag(staff_users_path, method: :get) do %>
  <%= text_field_tag :search %>
  <%= button_tag type: 'submit', class: "btn btn-blue btn-md white-hover verticalspace" do %>
    <p>
      <%= fa_icon "search" %>
    </p>
  <% end %>
<% end %>

<table class="table table-sm">
  <thead>
    <tr>
      <th><%= t("user_stu_id")%></th>
      <th><%= t("user_name")%></th>
      <th class="hidden-md"><%= t("phone")%></th>
      <th class="hidden-md"><%= t("mail")%></th>
      <th><%= t("add")%></th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.number %></td>
      <td><%= link_to staff_user_path(student.slug) do %>
        <%= student.name %>
      <% end %>
      </td>
      <td class="hidden-md"><%= student.phone %></td>
      <td class="hidden-md"><%= student.email %></td>
      <td><%= link_to "＋", staff_user_path(student.slug), method: 'PUT', data: { confirm: "確定要把 #{student.name} 加入 #{@department.name} 嗎?" }, class: 'btn btn-red btn-sm white-hover spin' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <div class="p-2">
    <%= link_to staff_salaries_path, class: 'btn btn-gray btn-md' do %>
      <p>
        <%= t("back")%>
      </p>
    <% end %>
  </div>
  <div class="p-2">
    <%= paginate @students %>
  </div>
</div>
