<h1 class="verticalspace">Hi, <%= @department.name %> 的 <%= current_user.name %> 您好</h1>
<div class="container">
  <div class="row">
    <div class="card col-lg-6 col-md-12">
      <%= link_to staff_salaries_path, class:"hover-sec card-time text-decoration-none" do %>
        <div class="card-body">
          <i class="fas fa-stopwatch"></i>
          <h2 class="card-title">工時登錄</h2>
          <p class="card-text">Wage Settlement</p>
        </div>
      <% end %>
    </div>
    <div class="card col-lg-6 col-md-12">
      <%= link_to new_problem_path, class:"hover-sec card-q text-decoration-none" do %>
        <div class="card-body">
          <i class="far fa-question-circle"></i>
          <h2 class="card-title">問題回報</h2>
          <p class="card-text">Report Issue</p>
        </div>
      <% end %>
    </div>
  </div>
</div>