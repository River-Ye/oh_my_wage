<h1>編輯頁面</h1>
<%= link_to "查詢", "#", class: 'btn btn-primary btn-lg' %>
<%= link_to "列印", "#", class: 'btn btn-success btn-lg' %>
<table class='table'>
  <thead>
    <td>學號</td>
    <td>姓名</td>
    <td>之前工時總和</td>
    <td>新增當日工時</td>
    <td>時薪</td>
    <td>試算</td>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.salaries.map { |x| x.hr }.sum %></td>
        <td><%= student.salaries.map { |x| x.hr * x.hourly_wage }.sum %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "回主選單", :back, class: 'btn btn-danger btn-lg' %>