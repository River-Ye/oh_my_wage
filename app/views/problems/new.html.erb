<div class="container">
  <h2 class="verticalspace3"><%= t("question")%></h2>
  <div class="col-lg-8 mx-auto">
    <% if @reply_to_issue.errors.any? %>
      <ul>
        <% @reply_to_issue.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="card col-lg-8 col-md-12 col-sm-12 center-block">
    <%= simple_form_for :reply_to_issue, url: problems_path do |form| %>
    <div class="card-title">
      <%= form.input :title %>
    </div>
    <div class="card-text">
      <%= form.input :content, as: :text %>
      <div class="d-flex justify-content-center">
        <div class="p-2">
          <%= link_to '/', class: 'btn btn-gray btn-md' do %>
            <p>
              <%= t("back")%>
            </p>
          <% end %>
          <%= button_tag type: 'submit', class: "btn btn-blue btn-md my-button", id: "register-button" do %>
          <p>
            <i class="fas fa-paper-plane"></i>
            <%= t("send")%>
          </p>
        <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>