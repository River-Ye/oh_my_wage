<h1 class="verticalspace">歷史資料</h1>
<div class="container">
  <div class="row">
    <%= link_to "查詢", "#", class: 'btn btn-blue btn-md' %>
    <%= link_to "列印", "#", class: 'btn btn-pdf btn-md' %>
  </div>
</div>
<table class='table'>
  <thead>
    <td>日期</td>
    <td>學生</td>
    <td>工讀時數</td>
    <td>薪資</td>
  </thead>
  <tbody>
    <% @student.each do |student| %>
      <tr>
        <td><%= student.salaries.map { |salary| salary.date } %></td>
        <td><%= student.name %></td>
        <td><%= student.salaries.map { |salary| salary.hr }.sum %></td>
        <td><%= student.salaries.map { |salary| salary.hr * salary.hourly_wage }.sum %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "回主選單", staff_path, class: 'btn btn-dark btn-md' %>