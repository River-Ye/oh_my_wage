<h1 class="verticalspace">資料建立表</h1>
<%= simple_form_for @user, url: admin_users_path do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-lg-8 col-md-12 col-sm-12">
       <%= f.input :number, label: '學號', required: true, autofocus: true %>
      </div>
      <div class="col-lg-4 col-md-12 col-sm-12">
        <%= f.input :role, label: '權限', collection: { "管理者": "管理者", "職員": "職員", "學生": "學生" } %>
      </div>
      <div class="col-lg-8 col-md-12 col-sm-12 ">
        <%= f.input :name, label: '姓名', required: true %>
      </div>
      <div class="col-lg-4 col-md-12 col-sm-12">
        <%= f.input :gender, label: '性別', collection: { "男": "男", "女": "女" } %>
      </div>
      <div class="col-lg-8 col-md-12 col-sm-12 ">
        <%= f.input :email, label: '信箱', required: true, placeholder: 'example@oh-my-wage.website' %>
      </div>
      <div class="col-lg-4 col-md-12 col-sm-12">
        <%= f.input :phone, label: '手機', input_html: { maxlength: 10 }, placeholder: '0987654321' %>
      </div>
      <div class="col-lg-4 col-md-12 col-sm-12">
        <%= f.input :password, input_html: { value: '123123' } %>
      </div>
    </div>

    <%= link_to :back, class: 'btn btn-gray btn-md' do %>
      <p>
        <i class="fas fa-backward"></i>
        上一頁
      </p>
    <% end %>
    <%= button_tag type: 'submit', class: 'btn btn-green btn-md' do %>
      <p>
        <i class="fas fa-user-plus"></i>
        新增
      </p>
    <% end %>
  </div>
<% end %>