<h1>資料建立表</h1>
<%= simple_form_for @user, url: admin_users_path do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-8">
       <%= f.input :number, label: '學號', required: true, autofocus: true %>
      </div>
      <div class="col-4">
        <%= f.input :role, label: '權限', collection: { "管理者": "admin", "員工": "staff", "學生": "student" } %>
      </div>
      <div class="col-8">
        <%= f.input :name, label: '姓名', required: true %>
      </div>
      <div class="col-4">
        <%= f.input :gender, label: '性別', collection: { "男": "Male", "女": "Female" } %>
      </div>
      <div class="col-8">
        <%= f.input :email, label: '信箱', required: true, placeholder: 'example@oh-my-wage.website' %>
      </div>
      <div class="col-4">
        <%= f.input :phone, label: '手機', input_html: { maxlength: 10 }, placeholder: '0987654321' %>
      </div>
      <div class="col-4">
        <%= f.input :password, input_html: {value: '123123'} %>
      </div>
    </div>

    <%= link_to "上一頁", :back, class: 'btn btn-primary btn-xs' %>
    <%= f.button :submit, '新增', class: 'btn-success btn-lg' %>
  </div>
<% end %>