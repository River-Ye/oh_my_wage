<h1 class=" row verticalspace">管理者 <%= current_user.name %> 您好</h1>

<h2 class=" row verticalspace">使用者名單</h2>
  <div class="row verticalspace">
    <%= form_tag(admin_users_path, method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag "查詢", class: "btn btn-blue btn-md white-hover verticalspace" %>
    <% end %>

    <%= link_to "新增", new_admin_user_path, class: 'btn btn-green btn-md white-hover verticalspace' %>
  </div>

<table class="table table-sm my-table" id="table">
  <thead>
    <tr>
      <th>角色</th>
      <th>編號</th>
      <th>姓名</th>
      <th>編輯</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.role %></td>
      <td><%= user.number %></td>
      <td><%= link_to user.name, admin_user_path(user.slug) %></td>
      <td><%= link_to "編輯", edit_admin_user_path(user.slug), class: 'btn btn-org btn-sm' %></td>
      <td><%= link_to "刪除",
              admin_user_path(user.slug),
              method: 'delete',
              class: 'btn btn-red btn-sm scale-hover white-hover',
              data: {confirm: "確定要把「#{user.name}」的資料刪除嗎???"}
            %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users, theme: 'twitter-bootstrap-4'%>

<%= link_to "問題回報總覽", problems_path, class: 'btn btn-red white-hover'%>