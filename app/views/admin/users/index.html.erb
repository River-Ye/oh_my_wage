<h1 class=" row verticalspace">管理者 <%= current_user.name %> 您好</h1>

<h2 class=" row verticalspace">使用者名單</h2>
  <div class="d-flex justify-content-between">
    <div class="p-2">
      <%= form_tag(admin_users_path, method: :get) do %>
        <%= text_field_tag :search %>
        <%= button_tag type: 'submit', class: "btn btn-blue btn-md white-hover verticalspace" do %>
          <p>
            <i class="fas fa-search"></i>
            查詢
          </p>
        <% end %>
      <% end %>
    </div>
    <div class="p-2 flex-grow-1">
      <%= link_to new_admin_user_path, class: 'btn btn-green btn-md white-hover verticalspace'  do %>
        <p>
          <i class="fas fa-user-plus"></i>
          新增
        </p>
      <% end %>
    </div>
    <div class="p-2">
      <%= link_to problems_path, class: 'btn btn-red white-hover verticalspace' do %>
        <p>
          問題回報總覽
          <i class="fas fa-chalkboard-teacher"></i>
        </p>
      <% end %>
    </div>
  </div>

<table class="table table-sm my-table" id="table">
  <thead>
    <tr>
      <th>角色</th>
      <th>編號</th>
      <th>姓名</th>
      <th>編輯</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.role %></td>
      <td><%= user.number %></td>
      <td><%= link_to user.name, admin_user_path(user.slug) %></td>
      <td>
        <%= link_to edit_admin_user_path(user.slug), class: 'btn btn-org btn-sm' do %>
            <i class="fas fa-pencil-alt"></i>
        <% end %>
      </td>
      <td>
        <%= link_to 'Ｘ', admin_user_path(user.slug),
          method: 'delete',
          class: 'btn btn-red btn-sm white-hover',
          data: {confirm: "確定要把「#{user.name}」的資料刪除嗎???"}%>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>