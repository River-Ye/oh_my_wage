<h1 class="verticalspace">搜尋結果：</h1>
<table class="table table-sm my-table">
  <thead>
    <tr>
      <th>角色</th>
      <th>編號</th>
      <th>姓名</th>
      <th>編輯</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.role %></td>
    <td><%= user.number.upcase %></td>
    <td><%= link_to user.name, admin_user_path(user.id) %></td>
    <td><%= link_to "編輯", edit_admin_user_path(user.id), class: 'btn btn-success btn-sm' %></td>
    <td><%= link_to "刪除",
            admin_user_path(user.id),
            method: 'delete',
            class: 'btn btn-danger btn-sm',
            data: {confirm: '確定嗎???'}
          %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
<div class="container">
<div class="row">
  <%= paginate @users, theme: 'twitter-bootstrap-4', class:"my-page" %>
  <%= link_to "返回首頁", admin_root_path, class: 'btn btn-md btn-search scale-hover' %>
  </div>
</div>
