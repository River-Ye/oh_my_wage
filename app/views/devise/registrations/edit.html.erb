<h2 class="verticalspace">修改個人資料</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
<h3>Hi, <%= @user.name %> 您好：</h3>
  <div class="form-inputs">
    <div class="row">
      <div class="col-lg-8 col-md-12 col-sm-12">
        <% if user_signed_in? && current_user.role == 'admin' %>
          <%= f.input :number, label: '編號' %>
        <% else %>
          <p>編號 <%= @user.number %></p>
        <% end %>
      </div>
      <div class="col-lg-4 col-md-12 col-sm-12">
        <% if user_signed_in? && current_user.role == 'admin' %>
          <%= f.input :role, label: '權限', collection: { "管理者": "admin", "員工": "staff", "學生": "student" } %>
        <% else %>
          <p>權限 <%= @user.role %></p>
        <% end %>
      </div>
      <div class="col-lg-8 col-sm-12 col-xs-12">
        <%= f.input :name, label: '姓名' %>
      </div>
      <div class="col-lg-4 col-sm-12 col-xs-12">
        <% if user_signed_in? && current_user.role == 'admin' %>
          <%= f.input :gender, label: '性別', collection: { "男": "Male", "女": "Female" } %>
        <% else %>
          <p>性別 <%= @user.gender %></p>
        <% end %>
      </div>
      <div class="col-lg-8 col-sm-12 col-xs-12">
        <%= f.input :email, label: '信箱', required: true, placeholder: 'example@oh-my-wage.website' %>
      </div>
      <div class="col-lg-4 col-sm-12 col-xs-12">
        <%= f.input :phone, label: '手機', input_html: { maxlength: 10 }, placeholder: '0987654321' %>
      </div>
    </div>
    
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <div class="row">
      <div class="col-lg-6 col-sm-12 col-xs-12">
        <%= f.input :password,
                    hint: "*如沒有要改密碼，可省略",
                    required: false,
                    label: '新密碼',
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="col-lg-6 col-sm-12 col-xs-12">
        <%= f.input :password_confirmation,
                    required: false,
                    label: '確認新密碼',
                    input_html: { autocomplete: "new-password" } %>
      </div>
    </div>
  </div>

  <div class="form-actions row">
    <%= f.button :submit, "更新", class: 'btn btn-green btn-md' %>
    <%= link_to "上一頁", '/', class: 'btn btn-dark btn-md ' %>
  </div>
<% end %>
