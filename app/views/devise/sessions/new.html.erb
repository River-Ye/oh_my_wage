<div class="overlay">
</div>
  <div class="row">
    <div class="loginblocksm col-12 d-md-none">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
          <%= f.button :submit, t(".sign_in"), class: 'btn btn-blue btn-md white-hover my-btne' %>
          <% end %>
      </div>
      <div class="fgpw2">
      <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="loginblock col-lg-5 col-md-12 col-sm-12 col-xs-12 d-none d-md-block position-relative mt-5">
      <%= image_tag('logo_sign_in.png',  class:'rounded mx-auto d-block') %>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= button_tag type:'submit', class: 'btn btn-blue btn-md white-hover my-btn' do %>
              <i class="fas fa-sign-in-alt"></i>
            <%= t(".sign_in") %>
          <% end %>
        <% end %>
        </div>
        <div class="fgpw">
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>

